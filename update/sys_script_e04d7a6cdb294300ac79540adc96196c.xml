        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var jsonMessage = JSON.parse(current.json_message);
	var faultRecord = new GlideRecord('x_brla_fm_fault_alert');

	faultRecord.device_id = jsonMessage.safeId;
	faultRecord.device_serial_number = jsonMessage.serialNumber;
	faultRecord.fault_code = jsonMessage.faultCode;
	faultRecord.message_text = jsonMessage.message;
	
	
	var hostTimeStamp = jsonMessage.dateTime;
	var formatTime = hostTimeStamp.replace('T', ' ');
	faultRecord.host_timestamp = formatTime;

	faultRecord.insert();
	

})(current, previous);]]></script>
